{
    "name": "todotools",
    "displayName": "ToDo-Tools",
    "publisher": "grahampcharles",
    "description": "Auxiliary functions for taskpaper documents.",
    "version": "0.6.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/grahampcharles/todo-tools.git"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:todotools.processTasks",
        "onCommand:todotools.runOnOpen",
        "onLanguage:todo",
        "onLanguage:taskpaper"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "To-Do Tools",
            "properties": {
                "todotools.runOnOpen": {
                    "type": "boolean",
                    "default": false,
                    "description": "Process files whenever they are opened."
                },
                "todotools.recurringItemsAdjacent": {
                    "type": "boolean",
                    "default": true,
                    "description": "Generate recurring items adjacent to the original item, rather than in the Future project."
                },
                "todotools.autoRun": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically check files every few minutes while they are open."
                },
                "todotools.autoRunInterval": {
                    "type": "number",
                    "default": 10,
                    "minimum": 1,
                    "maximum": 1440,
                    "description": "Number of minutes between automatically checking files."
                },
                "todotools.archiveDoneItems": {
                    "type": "boolean",
                    "default": false,
                    "description": "Archive @done items while processing recurring items."
                },
                "todotools.sortFutureItems": {
                    "type": "boolean",
                    "default": true,
                    "description": "Sort @due items by due date to the end of their projects."
                }
            }
        },
        "commands": [
            {
                "command": "todotools.processTasks",
                "title": "ToDo Tools: Copy Recurring Tasks"
            },
            {
                "command": "todotools.runOnOpen",
                "title": "ToDo Tools: Simulate On Open"
            }
        ],
        "languages": [
            {
                "id": "todo",
                "extensions": [
                    ".todo",
                    ".taskpaper"
                ],
                "aliases": [
                    "todo"
                ],
                "filenames": []
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "scratch": "ts-node ./src/scratch.ts"
    },
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "~14.18.18",
        "@types/vscode": "^1.67.0",
        "@typescript-eslint/eslint-plugin": "^5.24.0",
        "@typescript-eslint/parser": "^5.24.0",
        "@vscode/test-electron": "^2.1.3",
        "chai": "^4.3.6",
        "eslint": "^8.15.0",
        "glob": "^7.2.3",
        "mocha": "^9.2.2",
        "nyc": "^15.1.0",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "dayjs": "^1.11.2",
        "task-parser": "../task-parser/build"
    }
}

{
    "compilerOptions": {
        "baseUrl": ".",     
        "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
        "target": "ES2020",
        "lib": ["ES2020"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true /* enable all strict type-checking options */,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
        "@src/*": ["src/*"],               
    },
    },
    "exclude": ["node_modules", ".vscode-test"]
}
